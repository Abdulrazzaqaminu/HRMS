    <form action="/enroll" method="post">
        <div class="field">
            <label>Staff ID:</label>
            <input type="text" name="staffid" required>
        </div>
        <div class="field">
            <label>First Name:</label>
            <input type="text" name="firstName" required>
        </div>
        <div class="field">
            <label>Last Name:</label>
            <input type="text" name="lastName"  required>
        </div>
        <div class="field ">
            <label>Email:</label>
            <input type="email" name="email"  required>
        </div>
        <div class="field dob">
            <label>Date Of Birth:</label>
            <input type="text" class="datepicker" name="dob" autocomplete="off" required>
        </div>
        <div class="field ">
            <label>Phone Number:</label>
            <input type="text" onkeyup="numbersOnly(this)"  maxlength="11" name="phoneNumber" required>
        </div>
        <div class="field">
            <label>Dept:</label>
            <select name="dept" id="" required>
              <option value="">Choose...</option>
              <option value="IT">IT</option>
              <option value="Business">Business</option>
              <option value="Research & Developmemt">Research & Developmemt</option>
            </select>
        </div>
        <div class="field">
            <label>Unit:</label>
            <select name="unit" id="" required>
              <option value="">Choose...</option>
              <option value="Software Developmemt">Software Developmemt</option>
              <option value="Retails">Retails</option>
              <option value="UI/UX Design">UI/UX Design</option>
              <option value="Network Engineering">Network Engineering</option>
            </select>
        </div>
        <div class="field ">
            <label>Position:</label>
            <select name="position" id="" required>
                <option value="">Choose...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="field ">
            <label>Grade:</label>
            <select name="grade" id="" required>
                <option value="">Choose...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="field">
            <label>Enrollment date:</label>
            <input type="text" class="datepicker" autocomplete="off"  name="enrollDate" required>
        </div>
        <div class="field address">
            <label>Address:</label>
            <input type="text" placeholder="state" name="state" required>
            <input type="text" placeholder="city" name="city" required>
            <input type="text" placeholder="street" name="street" required>
        </div>
        <br>
        <button>Submit</button>
    </form>
