    <script>
        $( function() {
            $( ".datepicker" ).datepicker({
              beforeShow: function (input, inst) {
                setTimeout(function () {
                  inst.dpDiv.css({
                    top: 200,
                    left: 760
                  });
                },0);
              },
              changeYear: true,
              changeMonth: true,
              dateFormat: 'yy-mm-dd' 
            });
            $( "#format" ).on( "change", function() {
            $( "#datepicker" ).datepicker( "option", "dateFormat", $( this ).val() );
            });
            
        } );
    </script>
